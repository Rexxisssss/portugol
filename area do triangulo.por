programa {
	funcao inicio() {
		inteiro base, altura, area
		
		escreva ("Escreva a medida da base do triângulo: ")// input variavel "base"
		leia (base)
		
		escreva ("Escreva a medida da altura do triângulo: ")// imput variavel "altura"
		leia (altura)
		
		area = (base * altura)/2// defenição da furmula da area do triângulo
		
		escreva ("A area do triângulo é de ", area, " metros quadrados")// valor da area do triângulo
	}
}
